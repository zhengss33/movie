extends ../layout

block content
  .container
    .row
      .col-md-8
        video(width="100%", controls="controls" tabindex="-1", preload="auto", autoplay)
          source(src=movie.flash type="video/mp4" title=movie.title)
      .col-md-4
        dl.dl-horizontal
          dt 电影名字
          dd= movie.title
          dt 导演
          dd= movie.director
          dt 国家
          dd= movie.country
          dt 语言
          dd= movie.language
          dt 上映年份
          dd= movie.year
          dt 电影简介
          dd= movie.summary
        
